{
    "compilerOptions": {
        "rootDir": "./",
        "noEmit": true,
        "allowJs": true,
        "target": "ES2020",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
    },
    "paths": {
        "@/*": [
            "./src/*"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "./**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".vscode",
    ]
    // "files": [],
    // "references": [
    //     { "path": "./tsconfig.app.json" },
    //     { "path": "./tsconfig.node.json" }
    // ]
}
